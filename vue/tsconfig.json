{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "strict": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "lib",
    "types": ["jest"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es2020", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/index.ts"
  ],
  "exclude": ["node_modules"]
}
